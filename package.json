{
  "name": "buckless-server",
  "version": "1.0.1",
  "description": "buckless-server",
  "author": "Buckless <contact@buckless.com> https://buckless.com",
  "contributors": [
    "Gabriel Juchault <gabriel@buckless.com>",
    "Axel Mousset <axel@buckless.com>",
    "Lucas Soulier <lucas@buckless.com>"
  ],
  "repository": "https://lab.buckless.com/core/server.git",
  "homepage": "https://buckless.com",
  "private": true,
  "license": "MIT",
  "scripts": {
    "start": "node app",
    "pretest": "cd node_modules && ln -nsf ../app @",
    "test": "ava **/*.test.js --verbose -s",
    "posttest": "rm node_modules/@",
    "build:docker": "docker build -t lab.buckless.com:4567/core/server .",
    "dev": "cross-env NODE_ENV=development pm2 start ecosystem.config.js --no-daemon",
    "lint": "eslint app --fix",
    "coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "app/**/*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "_moduleAliases": {
    "@": "./app"
  },
  "eslintConfig": {
    "root": true,
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 4
  },
  "dependencies": {
    "axios": "^0.18.0",
    "bcryptjs": "^2.3.0",
    "bluebird": "^3.5.2",
    "body-parser-with-msgpack": "^1.17.0",
    "bookshelf": "^0.13.3",
    "bookshelf-eloquent": "^0.1.15",
    "bookshelf-manager": "^0.3.0",
    "bookshelf-paranoia": "^0.13.0",
    "bookshelf-signals": "^0.1.2",
    "bookshelf-uuid": "^1.0.0",
    "bull": "^3.4.8",
    "compression": "^1.7.3",
    "cookie-parser": "^1.4.2",
    "cors": "^2.7.1",
    "cross-env": "^5.2.0",
    "csv": "^3.1.0",
    "dot": "^1.1.2",
    "express": "^4.16.3",
    "express-async-handler": "^1.1.4",
    "faker": "^4.1.0",
    "flav-payline": "^0.1.4",
    "fs-extra": "^7.0.0",
    "husky": "^1.0.0-rc.15",
    "jsonwebtoken": "^8.3.0",
    "knex": "^0.15.2",
    "leven": "^2.1.0",
    "lodash": "^4.17.11",
    "mkdirp": "^0.5.1",
    "module-alias": "^2.1.0",
    "moment": "^2.22.2",
    "moment-round": "^1.0.1",
    "morgan": "^1.9.1",
    "msgpack-response": "^1.0.2",
    "nconf": "^0.10.0",
    "node-etupay": "ungdev/node-etupay",
    "nodemailer": "^4.6.8",
    "pg": "^7.4.3",
    "qs": "^6.5.2",
    "randomstring": "^1.1.5",
    "redis": "^2.8.0",
    "rimraf": "^2.5.2",
    "rxjs": "^6.3.2",
    "rxjs-compat": "^6.3.2",
    "sse-express": "^2.0.2",
    "transliteration": "^1.6.6",
    "util-promisifyall": "^1.0.4",
    "uuid": "^3.3.2",
    "winston": "^3.1.0",
    "winston-tcp-graylog": "PymZor/winston-tcp-graylog#refact-native-js"
  },
  "devDependencies": {
    "ava": "1.0.0-beta.7",
    "connect-sdk-nodejs": "^2.21.0",
    "coveralls": "^3.0.2",
    "eslint": "^5.6.0",
    "eslint-plugin-prettier": "^2.6.2",
    "inquirer": "^6.2.0",
    "lint-staged": "^7.3.0",
    "nodemon": "^1.18.4",
    "pm2": "^3.1.3",
    "prettier": "1.14.3"
  }
}
