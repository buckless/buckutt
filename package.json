{
  "name": "buckutt-server",
  "version": "1.0.0",
  "description": "Buckless API server",
  "author": "Gabriel Juchault <gabriel.juchault@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/buckutt/Eve-Server.git"
  },
  "scripts": {
    "build": "gulp",
    "clean": "gulp clean",
    "test:nocoverage": "gulp && NODE_ENV=test ./node_modules/.bin/babel-node ./node_modules/mocha/bin/_mocha --sort --bail",
    "test": "gulp && NODE_ENV=test ./node_modules/.bin/babel-node ./node_modules/.bin/babel-istanbul cover ./node_modules/mocha/bin/_mocha -- --sort --bail",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/.bin/coveralls",
    "start": "gulp && node app/app",
    "startdb": "rethinkdb&",
    "stopdb": "killall rethinkdb -s SIGINT",
    "cleardb": "gulp cleardb",
    "lint": "eslint . --ignore-pattern app,gulpfile.js",
    "lintfix": "eslint . --ignore-pattern app,gulpfile.js --fix"
  },
  "dependencies": {
    "bcryptjs": "^2.3.0",
    "bluebird": "^3.1.1",
    "body-parser": "^1.14.2",
    "compression": "^1.6.0",
    "console-title": "1.0.1",
    "cookie-parser": "^1.4.0",
    "cors": "^2.7.1",
    "express": "^4.13.3",
    "jsonwebtoken": "^5.5.4",
    "morgan": "1.6.1",
    "qs": "^6.0.1",
    "sync-exec": "^0.6.2",
    "thinky": "^2.2.4",
    "unirest": "github:mashape/unirest-nodejs",
    "winston": "^2.1.1"
  },
  "devDependencies": {
    "babel-cli": "^6.4.5",
    "babel-istanbul": "^0.6.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-register": "^6.4.3",
    "coveralls": "^2.11.6",
    "gulp": "3.9.0",
    "gulp-babel": "^6.1.1",
    "gulp-changed": "^1.3.0",
    "gulp-sourcemaps": "^1.6.0",
    "jshint-stylish": "^2.1.0",
    "mocha": "^2.3.4",
    "rimraf": "^2.5.0"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  }
}
