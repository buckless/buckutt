{
  "name": "buckless-client",
  "version": "1.0.0",
  "description": "buckless-client",
  "author": "Buckless <contact@buckless.com> https://buckless.com",
  "contributors": [
    "Gabriel Juchault <gabriel@buckless.com>",
    "Axel Mousset <axel@buckless.com>",
    "Lucas Soulier <lucas@buckless.com>"
  ],
  "repository": "https://lab.buckless.com/core/client.git",
  "homepage": "https://buckless.com",
  "private": true,
  "main": "src/main.js",
  "scripts": {
    "prepare:mobile": "cd cordova && cordova prepare",
    "prepare:native": "electron-rebuild .",
    "dev:browser": "cross-env TARGET=browser NODE_ENV=development vue-cli-service serve",
    "dev:electron": "cross-env TARGET=electron NODE_ENV=development vue-cli-service serve",
    "dev:android": "cross-env TARGET=cordova PLATFORM=android NODE_ENV=development vue-cli-service build --watch --mode development",
    "browser": "static dist/browser --port 8080",
    "electron": "electron .",
    "android": "cd cordova && cordova run android --emulator",
    "android:device": "cd cordova && cordova run android --device",
    "build:browser": "cross-env TARGET=browser NODE_ENV=production vue-cli-service build",
    "build:electron": "cross-env TARGET=electron NODE_ENV=production vue-cli-service build",
    "build:android": "cross-env TARGET=cordova NODE_ENV=android vue-cli-service build",
    "build:docker": "docker build -t lab.buckless.com:4567/core/client .",
    "lint": "vue-cli-service lint",
    "test:e2e": "vue-cli-service test:e2e"
  },
  "dependencies": {
    "@buckless/offline-queue": "^1.0.3",
    "@buckless/signed-data": "^2.2.0",
    "@buckless/signed-number": "^2.1.0",
    "@pokusew/pcsclite": "^0.4.18",
    "axios": "^0.18.0",
    "bcryptjs": "^2.4.3",
    "circular-json": "^0.5.5",
    "debug": "^3.2.4",
    "dexie": "^2.0.4",
    "file-saver": "^1.3.8",
    "fuzzy": "^0.1.3",
    "instascan": "^1.0.0",
    "localforage": "^1.7.2",
    "lodash": "^4.17.10",
    "msgpack-lite": "^0.1.26",
    "node-machine-id": "^1.1.10",
    "node-static": "^0.7.10",
    "normalize.css": "^8.0.0",
    "postcss-mixins": "^6.2.0",
    "raven-js": "^3.27.0",
    "readline": "^1.3.0",
    "rusha": "^0.8.13",
    "vue": "^2.5.17",
    "vue-router": "^3.0.1",
    "vue-virtual-scroller": "^0.12.0",
    "vuex": "^3.0.1",
    "vuex-persist": "^1.5.2"
  },
  "devDependencies": {
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@vue/cli-plugin-babel": "^3.0.1",
    "@vue/cli-plugin-e2e-cypress": "^3.0.1",
    "@vue/cli-plugin-eslint": "^3.0.1",
    "@vue/cli-service": "^3.0.1",
    "@vue/eslint-config-prettier": "^3.0.1",
    "cordova": "^8.0.0",
    "cross-env": "^5.2.0",
    "electron-rebuild": "^1.8.2",
    "lint-staged": "^7.2.0",
    "portfinder": "^1.0.17",
    "post-compile-webpack-plugin": "^0.1.2",
    "postcss-calc": "^6.0.1",
    "postcss-color-function": "^4.0.1",
    "postcss-custom-media": "^6.0.0",
    "postcss-custom-properties": "^7.0.0",
    "postcss-import": "^12.0.0",
    "postcss-loader": "^3.0.0",
    "postcss-nested": "^4.1.0",
    "postcss-simple-vars": "^5.0.1",
    "postcss-url": "^8.0.0",
    "sass-loader": "^7.0.1",
    "shelljs": "^0.8.2",
    "vue-template-compiler": "^2.5.17"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/prettier"
    ],
    "rules": {
      "no-console": 0
    },
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "globals": {
      "config": true,
      "cordova": true
    }
  },
  "postcss": {
    "plugins": {
      "postcss-import": {},
      "postcss-mixins": {},
      "postcss-custom-properties": {},
      "postcss-simple-vars": {},
      "postcss-calc": {},
      "postcss-color-function": {},
      "postcss-custom-media": {},
      "postcss-nested": {},
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "prettier": {
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 4
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  },
  "optionalDependencies": {
    "electron": "^2.0.9"
  }
}
