{
  "name": "buckless-server",
  "version": "1.0.0",
  "description": "Buckless API server",
  "authors": [
    "Gabriel Juchault <gabriel.juchault@gmail.com>",
    "Axel Mousset <axel@mousset.me>",
    "Lucas Soulier <lucas.soulier.utt@gmail.com>"
  ],
  "license": "MIT",
  "scripts": {
    "build": "gulp",
    "clean": "gulp clean",
    "test:nocoverage": "gulp && NODE_ENV=test ./node_modules/.bin/babel-node ./node_modules/mocha/bin/_mocha --sort --bail",
    "test:coverage": "gulp && NODE_ENV=test ./node_modules/.bin/babel-node ./node_modules/.bin/babel-istanbul cover ./node_modules/mocha/bin/_mocha -- --sort --bail",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/.bin/coveralls",
    "start": "gulp && node build/app",
    "test": "npm run test:nocoverage",
    "startdb": "rethinkdb&",
    "stopdb": "killall rethinkdb -s SIGINT",
    "cleardb": "gulp cleardb",
    "lint": "eslint . --ignore-pattern build,coverage,gulpfile.js"
  },
  "dependencies": {
    "bcryptjs": "^2.3.0",
    "bluebird": "^3.3.0",
    "body-parser": "^1.15.0",
    "compression": "^1.6.1",
    "cookie-parser": "^1.4.0",
    "cors": "^2.7.1",
    "express": "^4.13.4",
    "fs-walk": "0.0.1",
    "jsonwebtoken": "^5.5.4",
    "morgan": "1.6.1",
    "qs": "^6.1.0",
    "source-map-support": "^0.4.0",
    "sse": "github:gjuchault/sse.js",
    "sync-exec": "^0.6.2",
    "thinky": "^2.2.4",
    "unirest": "github:mashape/unirest-nodejs",
    "winston": "^2.1.1"
  },
  "devDependencies": {
    "babel-cli": "^6.5.1",
    "babel-istanbul": "^0.6.0",
    "babel-preset-es2015": "^6.5.0",
    "babel-register": "^6.5.2",
    "coveralls": "^2.11.6",
    "eventsource": "github:gjuchault/eventsource-node",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-changed": "^1.3.0",
    "gulp-sourcemaps": "^1.6.0",
    "jshint-stylish": "^2.1.0",
    "mocha": "^2.4.5",
    "rimraf": "^2.5.2"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  }
}
